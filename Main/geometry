
        %%---plotting geometry
        plot 1 2000 2000
        plot 3 2000 2000 100.0
        
        
    %%---surf for core
    surf infinite inf
    surf core_cyl cylz 0 0 100 0 200 % infinite cylinder 
    
    %%---surf for triso inside fuel pebbles (spheres)
    surf central_graphite sph 0 0 0 4.629218 % internal graphite
    surf graphite_mat sph 0 0 0 5.18 % graphite matrix maximum radius
    
    
        %%---graphite reflector
        surf cyl_out cyl 0.0 0.0 110 -10 210 % outer reflector surface
        cell refl_cylinder 0 Graphite924 core_cyl -cyl_out
        cell out2 0 outside cyl_out
        
    pbed u_pb u_flibe "fpb_pos" 
    cell c_pb 0 fill u_pb  -core_cyl %-upper_plane lower_plane
    cell c_flibe u_flibe Flibe924 -infinite
    
    